{{>layout/header}}

    <h1>페이징 게시판</h1>
    <div class="col-md-12">
        <!-- 목록 출력 영역 -->
        <table class="table table-horizontal table-bordered">
            <thead class="thead-strong">
            <tr>
                <th>게시글번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>작성일</th>
            </tr>
            </thead>
            <tbody id="tbody">
            {{#pagingPosts}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                    <td>{{author}}</td>
                    <td>{{createdDate}}</td>
                </tr>
            {{/pagingPosts}}
            </tbody>
        </table>
    </div>

{{>layout/footer}}